				<power>10</power>
				<cooldownTime>1.9</cooldownTime>
				<armorPenetration>0.2</armorPenetration>
			</li>
		</tools>
	</value>	
   </Operation>

	<Operation Class="PatchOperationAdd">
		<xpath>*/ThingDef[defName="Gun_RailgunMKI"]</xpath>
		<value>
			<equippedStatOffsets>
				<MeleeCritChance>0.2</MeleeCritChance>
